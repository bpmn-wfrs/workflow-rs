{
    "compilerOptions": {
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "declarationDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
